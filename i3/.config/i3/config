# Dotfiles - i3 config
# Author: Joshua Murphy
# Github: https://github.com/ranguli/dotfiles
# Config file for the i3 tiling wm (running the i3-gaps fork)

# Startup Settings
# ----------------
font pango:Source Code Pro Medium for Powerline
# Start compositor (for terminal transparency) 
exec compton --config ~/.config/compton.conf                        
# Set desktop wallpaper
exec feh --bg-scale ~/dotfiles/wallpapers/jon-flobrant-49795.jpg    
# Makes mouse dissapear if not used recently 
exec --no-startup-id unclutter                                      

# User applications
# -----------------
set $browser                    firefox                             
set $term                       urxvt                               
set $torrent                    rtorrent                            
set $fileman                    ranger                              
set $launcher                   rofi -show run                                
set $mail                       neomutt
set $music                      ncmpcpp
set $mod                        Mod4
floating_modifier               $mod
  
# Window settings
# ---------------
workspace $ws1                  output DVI-D-1 
workspace $ws2                  output HDMI-1 
workspace $ws3                  output VGA-1 
new_window pixel                4                                  

bindsym $mod+j                  focus left    
bindsym $mod+k                  focus down     
bindsym $mod+l                  focus up        
bindsym $mod+semicolon          focus right      

bindsym $mod+Shift+j            move left         
bindsym $mod+Shift+k            move down          
bindsym $mod+Shift+l            move up             
bindsym $mod+Shift+semicolon    move right           

bindsym $mod+h                  split h               
bindsym $mod+v                  split v                
bindsym $mod+f                  fullscreen toggle       

bindsym $mod+t                  layout tabbed
bindsym $mod+Shift+e            layout toggle split
bindsym $mod+Shift+space        floating toggle

bindsym $mod+space              focus mode_toggle
bindsym $mod+a                  focus parent
bindsym $mod+Shift+d            focus child

bindsym $mod+Shift+y            resize shrink width 10px 
bindsym $mod+Shift+u            resize shrink height 10px 
bindsym $mod+Shift+i            resize grow height 10px 
bindsym $mod+Shift+o            resize grow width 10px 

bar {
    status_command i3status -c ~/.config/i3status/config 
    font pango: Source Code Pro Variable for Powerline 8
    position top
}

# Gap settings
# ------------
gaps inner                      40
gaps outer                      60 

bindsym $mod+s                  gaps inner current plus 10
bindsym $mod+Shift+s            gaps inner current minus 10
bindsym $mod+x                  gaps outer current plus 10
bindsym $mod+Shift+x            gaps outer current minus 10
bindsym $mod+g                  gaps outer current set 0; gaps inner current set 0 
bindsym $mod+Shift+g            gaps outer current plus 40; gaps inner current plus 40


# Workspace settings
# ------------------
set $ws1                        "1: web"
set $ws2                        "2: term"
set $ws3                        "3: ssh + music"
set $ws4                        "4: mail + chat"
set $ws6                        "6: writing + school"
set $ws7                        "7: misc"
set $ws8                        "8: misc"
set $ws9                        "9: misc"
set $ws10                       "10: misc"

bindsym $mod+1                  workspace $ws1
bindsym $mod+2                  workspace $ws2
bindsym $mod+3                  workspace $ws3
bindsym $mod+4                  workspace $ws4
bindsym $mod+5                  workspace $ws5
bindsym $mod+6                  workspace $ws6
bindsym $mod+7                  workspace $ws7
bindsym $mod+8                  workspace $ws8
bindsym $mod+9                  workspace $ws9
bindsym $mod+0                  workspace $ws10

bindsym $mod+Shift+1            move container to workspace $ws1 
bindsym $mod+Shift+2            move container to workspace $ws2 
bindsym $mod+Shift+3            move container to workspace $ws3 
bindsym $mod+Shift+4            move container to workspace $ws4 
bindsym $mod+Shift+5            move container to workspace $ws5 
bindsym $mod+Shift+6            move container to workspace $ws6 
bindsym $mod+Shift+7            move container to workspace $ws7 
bindsym $mod+Shift+8            move container to workspace $ws8 
bindsym $mod+Shift+9            move container to workspace $ws9 
bindsym $mod+Shift+0            move container to workspace $ws10 

workspace $ws1                  gaps inner 0
workspace $ws1                  gaps outer 0
workspace $ws2                  gaps inner 0
workspace $ws2                  gaps outer 0
workspace $ws3                  gaps inner 0
workspace $ws3                  gaps outer 0

for_window [class="Firefox"]    move to workspace $ws1
for_window [title="ncmpcpp"]    move to workspace $ws3
for_window [title="mpsyt"]      move to workspace $ws3
for_window [class="mpv"]        move to workspace $ws3
for_window [title="weechat"]    move to workspace $ws4
for_window [title="neomutt"]    move to workspace $ws4
for_window [class="Blender"]    move to workspace $ws8
for_window [class="Gimp"]       move to workspace $ws9


# User keybindings
# ----------------
# Open file manager 
bindsym $mod+r                  exec $term -e $fileman              
bindsym $mod+Shift+r            exec $term -e sudo $fileman          
# Open browser
bindsym $mod+w                  exec $browser                       
# Run mail client
bindsym $mod+e                  exec $term -e $mail                 
# Run terminal
bindsym $mod+Return             exec $term                          
# Kill focused window
bindsym $mod+q                  kill                                
# Run program launcher  
bindsym $mod+d                  exec $launcher                      
# reload the configuration file
bindsym $mod+Shift+c            reload                              
# restart i3 inplace 
bindsym $mod+Shift+Delete       restart                             

# Color Scheme
# ------------
set $base00                     #181818
set $base01                     #282828
set $base02                     #383838
set $base03                     #585858
set $base04                     #b8b8b8
set $base05                     #d8d8d8
set $base06                     #e8e8e8
set $base07                     #f8f8f8
set $base08                     #ab4642
set $base09                     #dc9656
set $base0A                     #f7ca88
set $base0B                     #a1b56c
set $base0C                     #86c1b9
set $base0D                     #7cafc2
set $base0E                     #ba8baf
set $base0F                     #a16946
# Base16 Default Dark (Chris Kempson: http://chriskempson.com)

