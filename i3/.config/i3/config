# Dotfiles - i3 config
# Author: Joshua Murphy
# Github: https://github.com/ranguli/dotfiles
# Config file for the i3 tiling wm (running the i3-gaps fork)

# Startup Settings
# ----------------
font pango:Source Code Pro Medium for Powerline
exec compton --config ~/.config/compton.conf                        # Start compositor (for terminal transparency) 
exec feh --bg-scale ~/dotfiles/wallpapers/jon-flobrant-49795.jpg    # Set desktop wallpaper
exec --no-startup-id unclutter                                      # Makes mouse dissapear if not used recently 

# User applications
# -----------------
set $browser                    firefox                             # Web browser
set $mail                       neomutt                             # Email client 
set $term                       urxvt                               # Terminal
set $torrent                    rtorrent                            # P2P client
set $fileman                    ranger                              # File manager
set $launcher                   rofi                                # Application launcher
set $mod                        Mod4
set $shutdown                   exec sudo shutdown -h now
set $reboot                     exec sudo reboot 
floating_modifier               $mod
  
# Window settings
# ---------------
workspace 1                     output VGA-1                        # Force workspace 1 to our left monitor
new_window pixel                4                                  

bindsym $mod+j                  focus left    
bindsym $mod+k                  focus down     
bindsym $mod+l                  focus up        
bindsym $mod+semicolon          focus right      

bindsym $mod+Shift+j            move left         
bindsym $mod+Shift+k            move down          
bindsym $mod+Shift+l            move up             
bindsym $mod+Shift+semicolon    move right           

bindsym $mod+h                  split h               
bindsym $mod+v                  split v                
bindsym $mod+f                  fullscreen toggle       

bindsym $mod+t                  layout tabbed
bindsym $mod+Shift+e            layout toggle split
bindsym $mod+Shift+space        floating toggle

bindsym $mod+space              focus mode_toggle
bindsym $mod+a                  focus parent
bindsym $mod+Shift+d            focus child

bindsym $mod+Shift+y            resize shrink width 10px 
bindsym $mod+Shift+u            resize shrink height 10px 
bindsym $mod+Shift+i            resize grow height 10px 
bindsym $mod+Shift+o            resize grow width 10px 

bar {
    status_command i3status -c ~/.config/i3status/config 
    font pango: Source Code Pro Variable for Powerline 8
    position top
}

# Gap settings
# ------------
gaps inner                      40
gaps outer                      60 

bindsym $mod+s                  gaps inner current plus 5
bindsym $mod+Shift+s            gaps inner current minus 5
bindsym $mod+x                  gaps outer current plus 5
bindsym $mod+Shift+x            gaps outer current minus 5
bindsym $mod+g                  gaps outer current minus 100; gaps inner current minus 100
bindsym $mod+Shift+g            gaps outer current plus 40; gaps inner current plus 40


# Workspace settings
# ------------------
bindsym $mod+1                  workspace 1
bindsym $mod+2                  workspace 2
bindsym $mod+3                  workspace 3
bindsym $mod+4                  workspace 4
bindsym $mod+5                  workspace 5
bindsym $mod+6                  workspace 6
bindsym $mod+7                  workspace 7
bindsym $mod+8                  workspace 8
bindsym $mod+9                  workspace 9
bindsym $mod+0                  workspace 10

bindsym $mod+Shift+1            move container to workspace 1
bindsym $mod+Shift+2            move container to workspace 2
bindsym $mod+Shift+3            move container to workspace 3
bindsym $mod+Shift+4            move container to workspace 4
bindsym $mod+Shift+5            move container to workspace 5
bindsym $mod+Shift+6            move container to workspace 6
bindsym $mod+Shift+7            move container to workspace 7
bindsym $mod+Shift+8            move container to workspace 8
bindsym $mod+Shift+9            move container to workspace 9
bindsym $mod+Shift+0            move container to workspace 10



# User keybindings
# ----------------
bindsym $mod+r                  exec $term -e $fileman              # Open file manager 
bindsym $mod+Shift+r            exec $term -e sudo $fileman         # Open file manager with root permissions
bindsym $mod+w                  exec $browser                       # Open browser
bindsym $mod+e                  exec $term -e $mail                 # Run mail client
bindsym $mod+Return             exec $term                          # Run terminal
bindsym $mod+q                  kill                                # Quit currently focused window
bindsym $mod+d exec             $launcher -show run                 # Run program launcher  
bindsym $mod+Shift+c            reload                              # reload the configuration file
bindsym $mod+Shift+Escape       restart                             # restart i3 inplace 



## Base16 Default Dark
# Author: Chris Kempson (http://chriskempson.com)
set $base00                     #181818
set $base01                     #282828
set $base02                     #383838
set $base03                     #585858
set $base04                     #b8b8b8
set $base05                     #d8d8d8
set $base06                     #e8e8e8
set $base07                     #f8f8f8
set $base08                     #ab4642
set $base09                     #dc9656
set $base0A                     #f7ca88
set $base0B                     #a1b56c
set $base0C                     #86c1b9
set $base0D                     #7cafc2
set $base0E                     #ba8baf
set $base0F                     #a16946
